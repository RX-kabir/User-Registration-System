@model RegistrationApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            margin: 0;
            padding: 20px;
            color: #333;
            min-height: 100vh;
            box-sizing: border-box;
        }

        .registration-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
        }

        .form-title {
            text-align: center;
            color: #2575fc;
            margin-bottom: 30px;
            font-size: 1.8em;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 8px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 16px;
                box-sizing: border-box;
            }

        .full-width {
            grid-column: span 2;
        }

        .divider {
            border-top: 1px solid #ddd;
            margin: 20px 0;
            grid-column: span 2;
        }

        .radio-group {
            display: flex;
            gap: 15px;
        }

            .radio-group label {
                display: flex;
                align-items: center;
                font-weight: normal;
            }

            .radio-group input[type="radio"] {
                width: auto;
                margin-right: 8px;
            }

        .form-actions {
            display: flex;
            gap: 15px;
            grid-column: span 2;
            margin-top: 20px;
        }

            .form-actions input[type="submit"],
            .form-actions button {
                flex: 1;
                padding: 12px;
                border-radius: 6px;
                font-size: 16px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .form-actions input[type="submit"] {
                background-color: #2575fc;
                color: white;
                border: none;
            }

                .form-actions input[type="submit"]:hover {
                    background-color: #1e62c0;
                }

            .form-actions button {
                background-color: #f0f0f0;
                color: #333;
                border: 1px solid #ddd;
            }

                .form-actions button:hover {
                    background-color: #e0e0e0;
                }

        .error {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        .login-link {
            text-align: center;
            grid-column: span 2;
            margin-top: 20px;
        }

            .login-link a {
                color: #2575fc;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="registration-container">
        <h2 class="form-title">User Registration Form</h2>

        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

    <div class="form-grid">
        <!-- First Name / Last Name Row -->
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "error" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "error" })
        </div>

        <!-- Username/Email (Full Width) -->
        <div class="form-group full-width">
            @Html.LabelFor(model => model.UserName)
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "User Name / Email" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "error" })
        </div>

        <!-- Password / Confirm Password Row -->
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "error" })
        </div>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Gender -->
        <div class="form-group">
            <label>Gender</label>
            <div class="radio-group">
                <label>
                    @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "male" }) Male
                </label>
                <label>
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "female" }) Female
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "error" })
        </div>

        <!-- Role -->
        <div class="form-group">
            @Html.LabelFor(model => model.Role)
            @Html.DropDownListFor(model => model.Role, new SelectList(new List<string> { "Admin", "Manager", "Employee" }), "-- Select Role --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "error" })
        </div>

        <!-- Register/Cancel Buttons -->
        <div class="form-actions">
            <input type="submit" value="Register" class="btn-submit" />
            <button type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" class="btn-cancel">Cancel</button>
        </div>

        <style>
            .form-actions {
                display: grid;
                grid-template-columns: 1fr 1fr; /* True 50/50 split */
                gap: 15px;
                margin-top: 20px;
                width: 100%;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%; /* Full width of their grid cell */
                padding: 12px;
                font-size: 16px;
                border-radius: 6px;
                cursor: pointer;
                transition: all 0.3s ease;
                text-align: center;
            }

            .btn-submit {
                background-color: #2575fc;
                color: white;
                border: none;
            }

                .btn-submit:hover {
                    background-color: #1e62c0;
                    transform: translateY(-2px);
                }

            .btn-cancel {
                background-color: #f0f0f0;
                color: #333;
                border: 1px solid #ddd;
            }

                .btn-cancel:hover {
                    background-color: #e0e0e0;
                    transform: translateY(-2px);
                }

            /* Mobile responsiveness */
            @@media (max-width: 480px) {
                .form-actions {
                    grid-template-columns: 1fr; /* Stack vertically on small screens */
                }
            }
        </style>

    </div>
        }
    </div>
</body>
</html>