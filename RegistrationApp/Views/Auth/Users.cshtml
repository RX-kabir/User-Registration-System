@model List<RegistrationApp.Models.RegisterViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Make sure this points to your cleaned-up layout
}

<div class="users-container">
    <h2 class="users-header">Registered Users</h2>

    <div class="table-responsive">
        <table class="users-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Gender</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            <span class="gender-badge @user.Gender.ToLower()">@user.Gender</span>
                        </td>
                        <td>
                            <span class="role-badge @user.Role.ToLower()">@user.Role</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Main Container */
    .users-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Header */
    .users-header {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
        position: relative;
        padding-bottom: 10px;
    }

        .users-header:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #3498db, #9b59b6);
        }

    /* Table Styling */
    .users-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 14px;
    }

        .users-table th {
            background: linear-gradient(to right, #3498db, #9b59b6);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .users-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #e0e0e0;
            vertical-align: middle;
        }

        .users-table tr:last-child td {
            border-bottom: none;
        }

        .users-table tr:hover {
            background-color: #f8f9fa;
        }

    /* Badges */
    .gender-badge, .role-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: capitalize;
    }

        .gender-badge.male {
            background-color: #d4edff;
            color: #0056b3;
        }

        .gender-badge.female {
            background-color: #f8d7ff;
            color: #8e24aa;
        }

        .role-badge.admin {
            background-color: #ffebee;
            color: #c62828;
        }

        .role-badge.manager {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .role-badge.employee {
            background-color: #e3f2fd;
            color: #1565c0;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .users-table {
            display: block;
            overflow-x: auto;
        }

            .users-table th,
            .users-table td {
                padding: 8px 10px;
            }
    }
</style>